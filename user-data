    version: 2
  ssh:
    allow-pw: false
    authorized-keys: ['ssh-rsa  jylimaul@c1r4p6.hive.fi']
    install-server: true
  storage:
    config:
    - {ptable: gpt, path: /dev/sda, wipe: superblock-recursive,
      preserve: false, name: '', grub_device: true, type: disk, id: disk-sda}
